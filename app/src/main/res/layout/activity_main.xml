<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="24dp">

        <!-- App Logo -->
        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_kindhands"
            android:contentDescription="@string/app_logo_desc"
            android:layout_marginBottom="12dp"/>

        <!-- App Name -->
        <TextView
            android:id="@+id/txtAppName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/primary_text"
            android:layout_marginBottom="4dp"/>

        <!-- Welcome Message -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome to Kind Hands "
            android:textSize="20sp"
            android:textColor="@color/white"
            android:alpha="0.85"
            android:layout_marginBottom="12dp"/>

        <!-- Quote -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â€œYour small help can change someoneâ€™s life.â€"
            android:textStyle="italic"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/white"
            android:layout_marginBottom="24dp"/>

        <!-- Donate Button (Main Action) -->
        <Button
            android:id="@+id/btnDonate"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="@string/donate_items"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:backgroundTint="@color/donate_green"
            android:elevation="6dp"
            android:layout_marginBottom="16dp"/>

        <!-- NGO Login Button -->
        <Button
            android:id="@+id/btnNGO"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="@string/ngo_login"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:backgroundTint="@color/ngo_blue"
            android:layout_marginBottom="12dp"/>

        <!-- Register -->
        <TextView
            android:id="@+id/txtRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/register_prompt"
            android:textSize="14sp"
            android:textColor="@color/ngo_blue"
            android:textStyle="bold"
            android:layout_marginBottom="24dp"/>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white"
            android:alpha="0.2"
            android:layout_marginBottom="16dp"/>

        <!-- Donation Categories -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/what_you_can_donate"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginBottom="12dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4"
            android:gravity="center"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ðŸ‘• Clothes"
                android:gravity="center"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ðŸ“š Books"
                android:gravity="center"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ðŸž Food"
                android:gravity="center"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ðŸ§¸ Toys"
                android:gravity="center"
                android:textStyle="bold"/>
        </LinearLayout>



    </LinearLayout>
</ScrollView>
